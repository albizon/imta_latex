    \usebeamerfont{frametitle}%
    \vbox{}%\vskip-1.7ex%
%    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \hspace{0.4cm}\strut\insertframetitle\strut\hspace{0pt plus 1 filll}%
    \insertframenumber{} / \inserttotalframenumber%
